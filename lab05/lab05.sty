border-settings = 1px solid black

body
    font: 24px Helvetica
    background: #999999

#main
    min-height: 800px
    margin: 0px
    padding: 0px
    display: flex
    flex-flow: row

#main > article
    padding: 5px
    border: border-settings
    background: #dddd88
    flex: 3 1 60%
    order: 2

#main > nav
    padding: 5px
    border: border-settings
    background: #ccccff
    flex: 1 6 20%
    order: 1    
    text-align: right

#main > aside
    padding: 5px
    border: border-settings
    background: #ccccff
    flex: 1 6 20%
    order: 3

header, footer
    display: block
    padding: 5px
    min-height: 100px
    border: border-settings
    background: #ffeebb

/* Too narrow to support three columns */
@media all and (max-width: 640px)
    #main, #page
        flex-direction: column

    /* Return them to document order */
    #main > article, #main > aside
        order: 0
    
    #main > nav, #main > aside, header, footer
        min-height: 50px
        max-height: 50px

    #main > nav
        text-align: left
        order: -2
    

